{% extends 'admin.html.twig' %}

{% block sub_content %}
<div class="row">
    <div class="col-9">
        <div class="card">
            <div class="card-content">
                <div class="row">
                    <div class="col-8">
                        <div class="row">
                            <div class="card-title col-7">{{ type }} Items</div>
                            <div class="col-5 input-field inline">
                                <label>
                                    <select class="browser-default __ponzu sort-order">
                                        <option value="DESC">New to Old</option>
                                        <option value="ASC">Old to New</option>
                                    </select>
                                </label>
                                <label class="active">Sort:</label>
                            </div>
                        </div>
                    </div>
                    <form class="col-4" action="/admin/contents/search" method="get">
                        <div class="input-field post-search inline">
                            <label class="active">Search:</label>
                            <i class="right material-icons search-icon">search</i>
                            <label>
                                <input class="search" name="q" type="text" placeholder="Within all {{ type}} fields" />
                            </label>
                            <input type="hidden" name="type" value="{{ type }}" />
                            <input type="hidden" name="status" value="{{ status }}" />
                        </div>
                    </form>
                </div>
                <div>
                    <span class="description">Status:</span>
                    {% set statusUrl = urlPath ~ "?type=" ~ type %}
                    {% if status == "" or status == "public" %}
                        <span class="active">Public</span>&nbsp;&vert;&nbsp;<a href="{{statusUrl ~ "&status=pending"}}">Pending</a>
                    {% else %}
                        <a href="{{statusUrl ~ "&status=public"}}">Public</a>&nbsp;&vert;&nbsp;<span class="active">Pending</span>
                    {% endif %}
                </div>
                <ul class="posts">
                    {% for post in posts %}
                        <li>
                            <a href="/admin/edit?type={{ typeName }}&status={{ status}}&id={{ cid }}">
                                {{ post.String() }}
                            </a>
                            <span class="post-detail">Updated: {{ updatedTime }}</span>
                            <span class="publish-date right">{{ publishTime }}</span>
                            <form enctype="multipart/form-data" class="quick-delete-post __ponzu right" action="{{ action }}" method="post">
                                <span>Delete</span>
                                <input type="hidden" name="id" value="{{ cid }}" />
                                <input type="hidden" name="type" value="{{ typeName }}{{ status }}" />
                            </form>
                        </li>
                    {% endfor %}
                </ul>
                <ul class="pagination row">
                    {% if total < 1 %}
                        <li class="col s2 waves-effect disabled"><a href="#"><i class="material-icons">chevron_left</i></a></li>
                        <li class="col s8">0 to 0 of 0</li>
                        <li class="col s2 waves-effect disabled"><a href="#"><i class="material-icons">chevron_right</i></a></li>
                    {% else %}
                        <li class="col s2 waves-effect %s">
                            <a href="{{ pagination.prevURL }}">
                                <i class="material-icons">chevron_left</i>
                            </a>
                        </li>
                        <li class="col s8">{{ pagination.start }} to %d of {{ pagination.end }}</li>
                        <li class="col s2 waves-effect %s">
                            <a href="{{ pagination.nextURL }}">
                                <i class="material-icons">chevron_right</i>
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-3">
        <a href="/admin/edit?type={{ type }}" class="btn new-post waves-effect waves-light">
            New {{ type }}
        </a>
        {% if csv %}
            <a href="/admin/contents/export?type={{ type }}&format=csv" class="green darken-4 btn export-post waves-effect waves-light">
                <i class="material-icons left">system_update_alt</i>
                CSV
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block scripts %}
    <script>
        $(function() {
            const sort = $('select.__ponzu.sort-order');

            sort.on('change', function() {
                const path = window.location.pathname;
                const s = sort.val();
                const t = getParam('type');
                let status = getParam('status');

                if (status === "") {
                    status = "public";
                }

                window.location.replace(path + '?type=' + t + '&order=' + s + '&status=' + status);
            });

            const order = getParam('order');
            if (order !== '') {
                sort.val(order);
            }
        });

        $(function() {
            const del = $('.quick-delete-post.__ponzu span');
            del.on('click', function(e) {
                if (confirm("[Ponzu] Please confirm:\n\nAre you sure you want to delete this post?\nThis cannot be undone.")) {
                    $(e.target).parent().submit();
                }
            });
        });

        // disable link from being clicked if parent is 'disabled'
        $(function() {
            $('ul.pagination li.disabled a').on('click', function(e) {
                e.preventDefault();
            });
        });
    </script>
{% endblock %}